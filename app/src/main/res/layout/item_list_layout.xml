<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/planetImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/planetName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Planet Name"
        android:textSize="28sp"
        app:layout_constraintStart_toEndOf="@id/planetImage"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_editor_absoluteX="144dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="O Moon"
        android:textSize="20sp"
        app:layout_editor_absoluteX="132dp"
        app:layout_editor_absoluteY="54dp"
        android:id="@+id/moonCount"
        app:layout_constraintStart_toStartOf="@id/planetName"
        app:layout_constraintTop_toBottomOf="@id/planetName"/>


</androidx.constraintlayout.widget.ConstraintLayout>